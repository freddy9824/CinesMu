extends layout

block content

  - if (true) 
    .row
      .col-6
        .nav
          ul
            li
              a#ab(href="/carteleras") Carteleras
        form(action='/idiomas/create' method="POST")
          .form-group
            label(for='id_cartelera') 
            select#seleccionf.form-control.seleccion.seleccionf(type='select' name='id_cartelera' required).custom-select
                option(value="" selected) SELECCIONAR CARTELERA
                - for (let i = 0; i < carteleras.length; i++)
                  option(value=`${carteleras[i].id_cartelera}`) #{carteleras[i].id_cartelera}
          .form-group
            label(for='idioma') 
            select#ubicacion.form-control.seleccion(type='select' name='idioma' required).custom-select
                option(value="" selected) SELECCIONAR IDIOMA
                  option(value='Español') Español
                  option(value='Inglés') Inglés
                  option(value='Francés') Francés
          button#boton.agregar.bcartelera(type="submit") AGREGAR IDIOMA
      .contenedor#contenedor
        .col-6
        table#carteleras
          thead
            tr
              th Cartelera
              th Idioma
              th Editar
              th Eliminar
          tbody
          - for (var i = 0; i < idiomas.length; i++)
            tr
              td #{idiomas[i].id_cartelera}
              td #{idiomas[i].idioma}
              td
                  button#editareliminar(type='submit')
                    i.far.fa-edit.fa-lg
              td 
                  button#editareliminar(type='submit')
                    i.fas.fa-trash-alt.fa-lg

